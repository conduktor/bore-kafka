{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "conduktor-desktop",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/logo.png"
      ],
      "identifier": "desktop.conduktor.io",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [ 
           {
        "fullscreen": false,
        "resizable": true,
        "title": "conduktor-desktop",
          "width": 800,
          "height": 600
           }
      
    ],
    "systemTray": {
      "iconPath": "icons/logo.png",
      "iconAsTemplate": true
    }
  }
}
